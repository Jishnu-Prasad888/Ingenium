{
  "expo": {
    "name": "Ingenium",
    "slug": "ingenium",
    "version": "1.1.0",
    "orientation": "portrait",
    "scheme": "ingenium",
    "platforms": ["android"],

    "icon": "./assets/images/logo.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#F5E6D8"
    },

    "ios": {
      "appExtensions": []
    },

    "android": {
      "package": "com.thecaptainproject.ingenium",
      "versionCode": 1,
      "jsEngine": "hermes",

      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#F5E6D8"
      },

      "edgeToEdgeEnabled": true,

      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "ingenium"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        },
        {
          "action": "SEND",
          "data": [
            {
              "mimeType": "text/plain"
            }
          ],
          "category": ["DEFAULT"]
        }
      ]
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logo.png"
    },

    "plugins": [
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/logo.ttf"]
        }
      ],
      "expo-sqlite",
      [
        "expo-share-intent",
        {
          "android": {
            "enabled": true
          },
          "ios": {
            "enabled": false
          }
        }
      ]
    ],

    "extra": {
      "eas": {
        "projectId": "654e8ea2-4ad0-4eb6-a145-3cd135a17823"
      }
    }
  }
}
